<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="apiprojet.MainPage"             BackgroundColor="Black">    <ScrollView>        <VerticalStackLayout Padding="20" Spacing="15">            <!-- Recherche Gare de Départ -->            <Label Text="Rechercher une gare de départ" FontSize="Medium" />            <HorizontalStackLayout>                <Entry x:Name="cityEntryDep"                       Placeholder="Entrez une ville ou une gare"                       HorizontalOptions="FillAndExpand" />                <Button Text="Rechercher"                        CommandParameter="Dep"                        Clicked="OnSearchVilleButtonClicked"                        BackgroundColor="#007AFF"                        TextColor="Black" />            </HorizontalStackLayout>            <StackLayout x:Name="DynamicButtonsContainerDep" />            <!-- Recherche Gare d'Arrivée -->            <Label Text="Rechercher une gare d'arrivée" FontSize="Medium" />            <HorizontalStackLayout>                <Entry x:Name="cityEntryArv"                       Placeholder="Entrez une ville ou une gare"                       HorizontalOptions="FillAndExpand" />                <Button Text="Rechercher"                        CommandParameter="Arv"                        Clicked="OnSearchVilleButtonClicked"                        BackgroundColor="#007AFF"                        TextColor="White" />            </HorizontalStackLayout>            <StackLayout x:Name="DynamicButtonsContainerArv" />            <!-- Bouton pour rechercher le trajet -->            <Button Text="Rechercher le trajet"                    Clicked="OnSearchTrajetButtonClicked"                    BackgroundColor="#34C759"                    TextColor="White"                    FontSize="Large"                    VerticalOptions="EndAndExpand" />        </VerticalStackLayout>    </ScrollView></ContentPage>