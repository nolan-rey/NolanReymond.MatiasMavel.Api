<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="apiprojet.MainPage"             BackgroundColor="Black">    <ScrollView >        <VerticalStackLayout Padding="20" Spacing="20">            <!-- Sélection de la date et de l'heure -->            <Frame Padding="15" CornerRadius="10">                <StackLayout>                    <Label Text="Date de départ" FontSize="Medium" TextColor="White" />                    <DatePicker x:Name="datePicker" Format="D" />                    <Label Text="Heure de départ" FontSize="Medium" TextColor="White" Margin="0,10,0,0" />                    <TimePicker x:Name="timePicker" Format="t" />                </StackLayout>            </Frame>            <!-- Recherche Gare de Départ -->            <Frame Padding="15" CornerRadius="10">                <StackLayout>                    <Label Text="Rechercher une gare de départ" FontSize="Medium" TextColor="White" />                    <SearchBar                         x:Name="searchBarDep"                        Placeholder="Recherche une ville ou gare de départ"                        TextChanged="OnSearchBarTextChanged" />                    <StackLayout x:Name="DynamicButtonsContainerDep" Margin="0,10,0,0"  />                </StackLayout>            </Frame>            <!-- Recherche Gare d'Arrivée -->            <Frame Padding="15" CornerRadius="10">                <StackLayout>                    <Label Text="Rechercher une gare d'arrivée" FontSize="Medium" TextColor="White" />                    <SearchBar                         x:Name="searchBarArv"                        Placeholder="Recherche une ville ou gare d'arrivée"                        TextChanged="OnSearchBarTextChanged" />                    <StackLayout x:Name="DynamicButtonsContainerArv" Margin="0,10,0,0" />                </StackLayout>            </Frame>            <!-- Bouton pour rechercher le trajet -->            <Button Text="Rechercher le trajet"                    Clicked="OnSearchTrajetButtonClicked"                    BackgroundColor="#0B6E4F"                    TextColor="White"                    FontSize="Large"                    CornerRadius="10"                    Padding="10,5"                    Margin="0,20,0,0"                    HorizontalOptions="FillAndExpand" />            <Frame x:Name="TrajetDetailsFrame" IsVisible="False" Padding="15" CornerRadius="10" Background="#3C3F41">                <StackLayout>                    <Label x:Name="TrajetDetailsLabel" TextColor="White" FontSize="Medium"/>                </StackLayout>        </VerticalStackLayout>    </ScrollView></ContentPage>